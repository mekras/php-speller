{
    "name": "mekras/php-speller",
    "description": "PHP spell check library",
    "type": "library",
    "keywords": [
        "spelling",
        "aspell",
        "hunspell",
        "ispell"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Михаил Красильников",
            "email": "m.krasilnikov@yandex.ru"
        },
        {
            "name": "Andreas Frömer",
            "email": "blubb0r05+github@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "symfony/process": "^4.4 || ^5.0",
        "ext-iconv": "*",
        "ext-dom": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Mekras\\Speller\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mekras\\Speller\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
